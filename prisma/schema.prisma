// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sound {
  id          String    @id @default(cuid())
  title       String
  description String?
  fileUrl     String
  fileFormat  String
  duration    Float?
  soundpackId String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  soundpack   Soundpack? @relation(fields: [soundpackId], references: [id])
  tags        TagsOnSounds[]
}

model Soundpack {
  id          String    @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  sounds      Sound[]
}

model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  sounds    TagsOnSounds[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model TagsOnSounds {
  soundId   String
  tagId     String
  sound     Sound     @relation(fields: [soundId], references: [id])
  tag       Tag       @relation(fields: [tagId], references: [id])
  createdAt DateTime  @default(now())

  @@id([soundId, tagId])
}
